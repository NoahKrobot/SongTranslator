<style>



    .page{
        background: linear-gradient(180deg, #0f0f10 0%, #1b1b1d 100%);
        min-height: 50vh; 
        padding-bottom: 10vh;
    }

    .hero_video_pc{
        width: 100%;
        height: 100vh;
        object-fit: cover;
        filter: brightness(70%);
    }

    .hero_video_mob {
        display: none;
    }

    .hero_pc_img {
        display: block;
        width: 100%;
        overflow: hidden;
        filter: blur(10px);
        opacity: 0;
        animation: blurFadeIn 1s ease forwards;
        box-shadow: 1px 7px 11px -10px rgba(0, 0, 0, 1);
    }

    .hero_pc_img img {
        width: 100%;
        height: fit-content;
        /* object-fit: cover; */
        display: block;
        max-height: 100vh;
    }

   
    .hero_mob_img {
        display: none;
    }

   
    @@media (max-width: 768px) {
        .hero_video_mob {
            width: 100%;
            height: 100vh;
            object-fit: cover;
            filter: brightness(70%);
            display:block;
        }

        .hero_video_pc {
            display:none;
        }
        .hero_mob_img {
            display: block;
            width: 100%;
            overflow: hidden;
            filter: blur(10px);
            opacity: 0;
            animation: blurFadeIn 1s ease forwards;
            box-shadow: 1px 7px 11px -10px rgba(0, 0, 0, 1);
        }

        .hero_mob_img img {
            width: 100%;
            height: auto;
            object-fit: cover;
            display: block;
            max-height: 100vh;
        }

        .hero_pc_img {
            display: none;
        }
    }

       @@keyframes blurFadeIn {
        0% {
            opacity: 0;
            filter: blur(10px);
        }

        100% {
            opacity: 1;
            filter: blur(0);
        }
    }



    .footer-class-finisher {
        background: linear-gradient(90deg, #774579, #ab39ae);
