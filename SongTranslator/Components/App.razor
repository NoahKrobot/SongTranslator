<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap');

    body {
        font-family: 'Inter', sans-serif;
        background: #0f0f10;
        color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    .video-lyrics-container {
        display: flex;
        width: 100%;
        justify-content: space-evenly;
        align-items: center;
        margin-top: 10vh;
    }

    .single-video-box-placeholder,
    .lyrics-container,
    .lyrics-box-placeholder {
        width: 45%;
        max-width: 640px;
        aspect-ratio: 16 / 9;
        /* background-color: #f2f2f2; */
        background: linear-gradient(90deg, #fdceff, #d5b0f3);
        /* border: 3px dashed #e687e9; */
        color: #966ca2;
        font-size: 1.4rem;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 2vh;
        padding: 1.5vh;
        animation: fadeInUp 2s ease forwards;
    }

    .lyrics-container {
        width: 45%;
        max-width: 640px;
        max-height: 360px;
        aspect-ratio: 16 / 9;
        background-color: #f2f2f2;
        border: 3px dashed #e687e9;
        color: #555;
        font-size: 1.2rem;
        padding: 1.5vh 2vw;
        animation: fadeInUp 2s ease forwards;
        display: block;
        white-space: pre-wrap; 
        word-wrap: break-word; 
        line-height: 1.5;
        text-align: left;
        font-family: sans-serif;
        overflow-y: auto; 
    }

    .single-video-box {
        opacity: 0;
        transform: translateY(-20px);
        animation: fadeInUp 2s ease forwards;
    }

    @@keyframes fadeInUp {
        to

    {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .video-lyrics-container

    {
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 5vh;
    }

    .single-video-box-placeholder,
    .lyrics-container,
    .lyrics-box-placeholder {
        width: 90%;
        max-width: 100%;
        min-width: unset;
        min-height: 200px;
        max-height: none;
        font-size: 1rem;
        padding: 15px;
    }

    .lyrics-container,
    .lyrics-box-placeholder {
        margin-top: 20px;
    }

    }


    .input-group {
        display: flex;
        justify-content: center;
        gap: 1rem;
        padding: 4vh 2vw;
    }

    .input-group input {
        background: rgba(255,255,255,0.08);
        border: 1px solid rgba(255,255,255,0.1);
        color: #fff;
        padding: 0.8rem 1rem;
        width: 200px;
        transition: 0.3s ease;
    }

    .input-group .searchButtonForFetching {
        background: linear-gradient(90deg, #e687e9, #a95de5);
        border: none;
        color: white;
        font-weight: 600;
        padding: 2vh;
        border-radius: 2vh;
        transition: 0.3s ease;
    }

    .input-group .searchButtonForFetching:hover {
        transform: scale(1.05);
        background: linear-gradient(90deg, #a95de5, #e687e9);
    }

   
    .recommended-videos{
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 3vh;
        max-width: 100vh;
    }

    .recommendedVideoCard{
    }

</style>

